<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <include
        android:id="@+id/entry_0"
        layout="@layout/custom_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginRight="7dp" />

    <include
        android:id="@+id/entry_1"
        layout="@layout/custom_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/entry_0" />

    <include
        android:id="@+id/entry_2"
        layout="@layout/custom_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_0"
        android:layout_column="0"
        android:layout_marginRight="7dp" />

    <include
        android:id="@+id/entry_3"
        layout="@layout/custom_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_1"
        android:layout_column="0"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/entry_2" />

    <include
        android:id="@+id/entry_4"
        layout="@layout/custom_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_2"
        android:layout_column="0"
        android:layout_marginRight="7dp" />

    <include
        android:id="@+id/entry_5"
        layout="@layout/custom_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_3"
        android:layout_column="0"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/entry_4" />
</RelativeLayout>